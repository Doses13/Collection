<Page
    x:Class="collectionTest1.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:collectionTest1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Orientation="Vertical" Background="#202020">
        <StackPanel x:Name="mainPage" Orientation="Vertical">
            <MenuBar Background="#404040">
                <MenuBarItem Title="File">
                    <MenuFlyoutItem Text="Export Collection" Click="exportCol"/>
                    <MenuFlyoutItem Text="Import Collection" Click="importCol"/>
                    <MenuFlyoutItem Text="Exit" Click="clickExit"/>
                </MenuBarItem>
                <MenuBarItem Title="Edit">
                    <MenuFlyoutItem Text="Add Item"/>
                    <MenuFlyoutItem Text="Clear Collection"/>
                </MenuBarItem>
                <MenuBarItem Title="Help">
                    <MenuFlyoutItem Text="About"/>
                </MenuBarItem>
            </MenuBar>
            <CommandBar x:Name="backButtonBar" Visibility="Collapsed" AllowDrop="False" FlowDirection="RightToLeft" OverflowButtonVisibility="Collapsed">
                <AppBarButton x:Name="backButton" Tag="Back" Icon="Back" Label="Back" Click="backButtonPress"></AppBarButton>
            </CommandBar>
            <StackPanel x:Name="Home" Orientation="Horizontal">
                <ScrollViewer>
                    <StackPanel x:Name="colButs" Background="#303030" Orientation="Vertical">
                        <Button x:Name="colButton" Margin="10" Width="200" Height="50" CornerRadius="10" Click="NewCollectionFunc">New Collection (+)</Button>
                    </StackPanel>
                </ScrollViewer>
                <Grid x:Name="ItemGrid" Width="500" ColumnSpacing="25" RowSpacing="25">
                    <!--item view--> 
                    
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="100"/>
                    </Grid.RowDefinitions>
                    <Button x:Name="addButton" Click="newItemFunc" Height="100" Width="100" HorizontalAlignment="Center">
                        <TextBlock Text="Add Item (+)" />
                    </Button>
                   
                </Grid>
            </StackPanel>
        </StackPanel>
        <StackPanel x:Name="addItem" Orientation="Vertical" Visibility="Collapsed">
            <TextBox x:Name="addItemName" Header="Enter item name" PlaceholderText="Name" Width="300" HorizontalAlignment="Left" Margin="25" Visibility="Visible"/>
            <TextBox x:Name="addItemDescription" Header="Enter item Description" PlaceholderText="Description" Width="400" Height="200" Margin="20" Visibility="Visible" HorizontalAlignment="Left"/>
            <TextBox x:Name="addItemPrice" Header="Enter Price" PlaceholderText="Price" Width="150" Height="75" Margin="20" Visibility="Visible" HorizontalAlignment="Left"/>
            <TextBox x:Name="addItemCondition" Header="Enter Conditoion" PlaceholderText="Condition" Width="150" Height="75" Margin="20" Visibility="Visible" HorizontalAlignment="Left"/>
            <Button x:Name="addItemImage" Margin="10" HorizontalAlignment="left" Content="Add Image" Height="50" Width="150" Click="addImageInAddItem"/>
            <Button x:Name="addItemConfirm" Content="Add Item" Click="newItemConfirm" Margin="10" HorizontalAlignment="Center" Width="200" Height="50" Background="ForestGreen"/>
        </StackPanel>
        <StackPanel x:Name="addCollection" Orientation="Vertical" Visibility="Collapsed">
            <TextBox x:Name="colName" Header="Enter Collection Name" PlaceholderText="Name" Width="300" HorizontalAlignment="Left" Margin="25"/>
            <TextBox x:Name="attText" Header="Enter an Attribute" PlaceholderText="Attribute" Width="200" HorizontalAlignment="Left" Margin="25"/>
            <StackPanel x:Name="attButs" Orientation="Horizontal" Visibility="Visible">
                <Button x:Name="addAtt" Content="Add" Margin="10"/>
                <Button x:Name="subAtt" Content="Sub" Margin="10"/>
            </StackPanel>
        </StackPanel>
        <StackPanel x:Name="singleItemView" Orientation="Vertical" Visibility="Collapsed">
            <Image x:Name="singleItemImage" Width="200" Height="200" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="25"/>
            <TextBox x:Name="singleViewName" Header="Name" PlaceholderText="" Width="300" HorizontalAlignment="Left" Margin="25" Visibility="Visible" IsEnabled="False"/>
            <TextBox x:Name="singleViewDescription" Header="Description" PlaceholderText="" Width="400" Height="200" Margin="20" Visibility="Visible" HorizontalAlignment="Left" IsEnabled="False"/>
            <TextBox x:Name="singleViewPrice" Header="Price" PlaceholderText="" Width="150" Height="75" Margin="20" Visibility="Visible" HorizontalAlignment="Left" IsEnabled="False"/>
            <TextBox x:Name="singleViewCondition" Header="Condition" PlaceholderText="" Width="150" Height="75" Margin="20" Visibility="Visible" HorizontalAlignment="Left" IsEnabled="False"/>
        </StackPanel>
    </StackPanel>
</Page>
